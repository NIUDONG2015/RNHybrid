<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/logo_page" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xct_space_value_x50"
            android:text="拥抱变化，快速学习。"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/xct_space_value_x24"
            android:textSize="25sp" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="@dimen/xct_space_value_x50"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/xct_space_value_x24"
            android:layout_marginBottom="@dimen/xct_space_value_x30"
            android:text="记录成长路上的点点滴滴...Go！"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</FrameLayout>

