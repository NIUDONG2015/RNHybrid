<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/xct_space_value_x15"
    android:layout_marginRight="@dimen/xct_space_value_x15"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xct_space_value_x45"
        android:layout_marginTop="@dimen/xct_space_value_x8"
        android:gravity="center|left"
        android:textSize="@dimen/xct_space_value_x15" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>