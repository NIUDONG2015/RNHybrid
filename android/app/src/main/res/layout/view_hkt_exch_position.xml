<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/xct_space_value_x10"
    android:paddingLeft="@dimen/xct_space_value_x8"
    android:paddingRight="@dimen/xct_space_value_x8"
    android:paddingTop="@dimen/xct_space_value_x10">


    <!--标题-->
    <TextView
        android:id="@+id/tv_view_exch_position_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xct_space_value_x4"
        android:layout_marginStart="@dimen/xct_space_value_x4"
        android:singleLine="true"
        android:text=""
        android:textColor="#000"
        android:textSize="14sp" />

    <!--中间文本-->
    <TextView
        android:id="@+id/tv_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:textColor="#000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--第二级文本 主文本-->
    <TextView
        android:id="@+id/tv_view_exch_position_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:textColor="#000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!--第二级文本 次文本-->
    <TextView
        android:id="@+id/tv_view_exch_position_content2_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#000"
        android:textSize="12sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_view_exch_position_content2"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>