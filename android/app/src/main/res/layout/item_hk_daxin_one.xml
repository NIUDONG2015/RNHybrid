<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/xn_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/xct_space_value_x10"
    android:paddingRight="@dimen/xct_space_value_x10">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xct_space_value_x10"
        android:text=""
        android:textColor="#000"
        android:textSize="@dimen/xct_space_value_x14"
    />

    <LinearLayout
        android:id="@+id/ll_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xct_space_value_x8"
        android:background="#5ff0"
        android:orientation="vertical"
        android:paddingBottom="@dimen/xct_space_value_x10"
        android:paddingLeft="@dimen/xct_space_value_x7"
        android:paddingRight="@dimen/xct_space_value_x7"
        android:paddingTop="@dimen/xct_space_value_x10">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/xct_lthj_color_black"
            android:textSize="@dimen/xct_space_value_x13"

            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xct_space_value_x6"
            android:text=""
            android:lineSpacingExtra="@dimen/xct_space_value_x2"
            android:textColor="#999"
            android:textSize="@dimen/xct_space_value_x12"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    </LinearLayout>


</LinearLayout>