<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/xct_space_value_x10"
    android:layout_marginRight="@dimen/xct_space_value_x10">
    <!--colorwhite-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fff"
        android:orientation="vertical">


        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xct_space_value_x10"
            android:layout_marginRight="@dimen/xct_space_value_x10"
            android:layout_marginTop="@dimen/xct_space_value_x10"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/xct_space_value_x14" />

        <View
            style="@style/DividerHorizontal"
            />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xct_space_value_x40"
            android:background="#fff"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/md_material_blue_600"
            android:textSize="15sp" />

    </LinearLayout>


</RelativeLayout>