<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_load_more_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/xct_space_value_x15"
        android:text="上拉加载"
        android:textColor="@color/xct_lthj_color_gray"
        android:textSize="@dimen/xct_lthj_newquot_font_medium" />

    <ProgressBar
        android:id="@+id/pb_load_more_doing"
        android:layout_width="@dimen/xct_space_value_x30"
        android:layout_height="@dimen/xct_space_value_x30"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progressbar"
        android:visibility="invisible" />
</FrameLayout>