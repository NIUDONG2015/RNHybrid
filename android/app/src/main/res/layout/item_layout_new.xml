<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_normal"
    android:orientation="vertical">

    <!-- 交易登录以后 -->
    <!-- 上 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/xct_lthj_margin_xmedium"
        android:paddingRight="@dimen/xct_lthj_margin_xmedium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/xct_space_value_x14">

            <TextView
                android:id="@+id/xct_lthj_hkt_quot_exch_exch_tv_asset_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/xct_space_value_x13" />

            <TextView
                android:id="@+id/xct_lthj_hkt_quot_exch_exch_tv_asset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xct_space_value_x9"
                android:text=""
                android:textSize="@dimen/xct_space_value_x30" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xct_space_value_x9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lthjAutoSizeTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:text="今日收益"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/xct_lthj_hkt_tv_today_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xct_space_value_x10"
                    android:text=""
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/xct_lthj_hkt_tv_today_profit_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xct_space_value_x10"
                    android:text=""
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/xct_lthj_hkt_quot_exch_exch_tv_asset_circle"
            android:layout_width="@dimen/xct_space_value_x90"
            android:layout_height="@dimen/xct_space_value_x90"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/xct_space_value_x5"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/xct_lthj_newquot_space_zeroone"
        android:layout_marginTop="@dimen/xct_space_value_x15"
        android:background="@color/xct_lthj_color_black" />
    <!-- 下 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70px"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:paddingLeft="@dimen/xct_lthj_margin_xmedium"
            android:paddingRight="@dimen/xct_lthj_margin_xmedium">

            <TextView
                android:id="@+id/xct_lthj_hkt_quot_exch_exch_tv_avaliable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/xct_space_value_x13" />

            <TextView
                android:id="@+id/xct_lthj_quot_exch_exch_tv_avaliable_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:lines="1"
                android:text="323234234342"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/xct_space_value_x5"
            android:paddingTop="@dimen/xct_space_value_x5" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/xct_lthj_margin_xmedium"
            android:paddingRight="@dimen/xct_lthj_margin_xmedium">

            <TextView
                android:id="@+id/xct_lthj_quot_exch_exch_tv_avaliable_takout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/xct_space_value_x13" />

            <TextView
                android:id="@+id/xct_lthj_quot_exch_exch_tv_avaliable_takout_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:lines="1"
                android:text="32323232"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>